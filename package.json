    "awesome-typescript-loader": "^3.2.1",
    "cachedfs": "^0.3.3",
    "connected-react-router": "^4.2.3",
    "copy-webpack-plugin": "^4.0.1",
    "core-js": "^2.4.1",
    "css-loader": "^0.28.4",
    "ejs-loader": "^0.3.0",
    "express": "^4.15.3",
    "extract-css-chunks-webpack-plugin": "^2.0.3",
    "extract-text-webpack-plugin": "^2.1.2",
    "faker": "^4.1.0",
    "favicons-webpack-plugin": "git+https://github.com/cescoferraro/favicons-webpack-plugin.git",
    "fs-extra": "^3.0.1",
    "history": "^4.6.3",
    "html-webpack-plugin": "^2.29.0",
    "lodash": "^4.17.4",
    "material-ui": "^0.18.6",
    "morgan": "^1.8.2",
    "noop-webpack-plugin": "^1.0.1",
    "offline-plugin": "^4.8.1",
